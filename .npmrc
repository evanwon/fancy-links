# Prevents automatic execution of install/postinstall scripts to protect against supply chain attacks
ignore-scripts=true

# Set the minimum severity level for npm audit to fail
# Options: low, moderate, high, critical
audit-level=moderate

# Disable fund messages to reduce noise in CI/CD
fund=false

# Ensure package-lock.json is always updated
package-lock=true

# Use exact versions when installing packages with npm install --save
save-exact=false

# Prefer offline installations when packages are in cache
prefer-offline=true